@model IEnumerable<CadeMeuMedico.Models.Especialidades>

@{
    ViewBag.Title = "Especialidades";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Especialidades</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.IDEspecialidade }) |
            @Html.ActionLink("Details", "Details", new { id=item.IDEspecialidade }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.IDEspecialidade })
        </td>
    </tr>
}

</table>
