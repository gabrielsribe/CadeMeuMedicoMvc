@model IEnumerable<CadeMeuMedico.Models.Medicos>

@{
    ViewBag.Title = "Medicos cadastrados";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Médicos</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cidades.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Especialidades.Nome)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cidades.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Especialidades.Nome)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { id=item.IDMedico }) |
            @Html.ActionLink("Detalhes", "Detalhes", new { id=item.IDMedico }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.IDMedico })
        </td>
    </tr>
}

</table>
